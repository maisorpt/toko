SELECT COUNT(quantity) as FROM `gudang`WHERE quantity > 0 

SELECT COUNT(quantity)  as FROM `gudang`WHERE quantity = 0 

SELECT COUNT(item_name) as  FROM `gudang`

SELECT COUNT(merek) as FROM `barang`


